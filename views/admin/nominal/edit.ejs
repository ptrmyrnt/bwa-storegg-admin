<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Beranda</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Ubah Nominal: "<%= nominal.coinName %>""
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/nominal/edit/<%= nominal._id %>?_method=put" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label>Nama Koin</label>
                  <select class="form-control select2" style="width: 100%;" name="coinName" required>
                    <option <%= (nominal.coinName === '') ? selected='selected' : '' %>>Pilih koin</option>
                    <option value="Gold" <%= (nominal.coinName === 'Gold') ? selected='selected' : '' %>>Gold
                    </option>
                    <option <%= (nominal.coinName === 'Diamond') ? selected='selected' : '' %> value="Diamond">
                      Diamond</option>
                    <option value="Jewelery" <%= (nominal.coinName === 'Jewelery') ? selected='selected' : '' %>>
                      Jewelery
                    </option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input type="number" class="form-control" name="coinQuantity" id="coinQuantity" value="<%= nominal.coinQuantity %>" placeholder="Masukkan jumlah koin" required>
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input type="number" class="form-control" name="price" id="price" value="<%= nominal.price %>" placeholder="Masukkan harga" required>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>