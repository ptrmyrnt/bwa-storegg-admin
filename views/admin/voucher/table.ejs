<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Game</th>
      <th>Kategori</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i=0; i<voucher.length; i++){ %>
    <tr>
      <td>
        <%= i+1 %>
      </td>
      <td>
        <%= voucher[i].name %>
      </td>
      <td>
        <%= voucher[i].category?.name ?? '-' %>
      </td>
      <td>
        <% for(let j = 0; j < voucher[i].nominals.length; j++) { %>
        <span class="badge badge-warning">
          <%= voucher[i].nominals[j].coinName %>
          <%= voucher[i].nominals[j].coinQuantity %>
        </span>
        <% } %>
      </td>
      <td>
        <% if(voucher[i].status === 'Y') { %>
        <span class="badge badge-success">Aktif</span>
        <% } else { %>
        <span class="badge badge-danger">Tidak Aktif</span>
        <% } %>
      </td>
      <td>
        <form action="/voucher/edit/status/<%= voucher[i]._id %>?_method=put" method="post" style="display: inline-block;" class="mb-1">
          <button class="btn btn-primary btn-sm">
            <i class="fa fa-folder"></i>
            <% if(voucher[i].status === 'Y') { %>
            Matikan
            <% } else { %>
            Hidupkan
            <% } %>
          </button>
        </form>
        <div class="mb-1" style="display: inline-block;">
          <a href="/voucher/edit/<%= voucher[i]._id %>" class="btn btn-warning btn-sm">
            <i class="fa fa-pencil-alt"></i>
            Ubah
          </a>
        </div>
        <form action="/voucher/delete/<%= voucher[i]._id %>?_method=delete" method="post" style="display: inline-block;" class="mb-1">
          <button class="btn btn-danger btn-sm">
            <i class="fa fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>