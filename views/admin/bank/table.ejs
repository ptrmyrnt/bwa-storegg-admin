<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Nama Bank</th>
      <th>Nama Pemilik Rekening</th>
      <th>Nomor Rekening</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <!-- tr -->
    <% for(let i = 0; i < bank.length; i++) { %>
    <tr>
      <td>
        <%= i+1 %>
      </td>
      <td>
        <%= bank[i].bankName %>
      </td>
      <td>
        <%= bank[i].name %>
      </td>
      <td>
        <%= bank[i].noRekening %>
      </td>
      <td>
        <form action="/bank/delete/<%= bank[i]._id %>?_method=delete" method="post">
          <a href="/bank/edit/<%= bank[i]._id %>" class="btn btn-warning btn-sm">
            <i class="fa fa-pencil-alt"></i>
            Ubah
          </a>
          <button class="btn btn-danger btn-sm">
            <i class="fa fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>