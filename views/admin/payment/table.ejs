<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No.</th>
      <th>Tipe Pembayaran</th>
      <th>Bank</th>
      <th>Status</th>
      <th>Aksi</th>
    </tr>
  </thead>
  <tbody>
    <!-- tr -->
    <% for(let i = 0; i < payment.length; i++) { %>
    <tr>
      <td>
        <%= i+1 %>
      </td>
      <td>
        <%= payment[i].type %>
      </td>
      <td>
        <% for(let j = 0; j < payment[i].banks.length; j++) { %>
        <span class="badge badge-warning">
          <%= payment[i].banks[j].bankName %> -
          <%= payment[i].banks[j].name %> -
          <%= payment[i].banks[j].noRekening %>
        </span>
        <% } %>
      </td>
      <td>
        <% if(payment[i].status === 'Y') { %>
        <span class="badge badge-success">Aktif</span>
        <% } else { %>
        <span class="badge badge-danger">Tidak Aktif</span>
        <% } %>
      </td>
      <td>
        <form action="/payment/edit/status/<%= payment[i]._id %>?_method=put" method="post" style="display: inline-block;" class="mb-1">
          <button class="btn btn-primary btn-sm">
            <i class="fa fa-folder"></i>
            <% if(payment[i].status === 'Y') { %>
            Matikan
            <% } else { %>
            Hidupkan
            <% } %>
          </button>
        </form>
        <div class="mb-1" style="display: inline-block;">
          <a href="/payment/edit/<%= payment[i]._id %>" class="btn btn-warning btn-sm">
            <i class="fa fa-pencil-alt"></i>
            Ubah
          </a>
        </div>
        <form action="/payment/delete/<%= payment[i]._id %>?_method=delete" method="post" style="display: inline-block;" class="mb-1">
          <button class="btn btn-danger btn-sm">
            <i class="fa fa-trash"></i>
            Hapus
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>